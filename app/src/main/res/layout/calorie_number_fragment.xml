<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.view.CalorieNumberFragment" >
    <TextView
            android:text="Calories Remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_CaloriesRemaining"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="18dp"
            android:layout_marginEnd="270dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="696dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="2000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_goalCalories"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="70dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"/>
    <TextView
            android:text="Goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_Goal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_goalCalories"
            app:layout_constraintStart_toStartOf="@+id/txt_goalCalories"
            app:layout_constraintEnd_toEndOf="@+id/txt_goalCalories"/>
    <TextView
            android:text="1000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_goalCalories2"
            android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="70dp"/>
    <TextView
            android:text="Remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_Remaning"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_goalCalories2"
            app:layout_constraintStart_toStartOf="@+id/txt_goalCalories2"
            app:layout_constraintEnd_toEndOf="@+id/txt_goalCalories2"/>
    <TextView
            android:text="1000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView18"
            app:layout_constraintStart_toEndOf="@+id/txt_goalCalories" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/txt_goalCalories2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="70dp"/>
    <TextView
            android:text="Used"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_Used"
            app:layout_constraintTop_toBottomOf="@+id/textView18"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="@+id/textView18"
            app:layout_constraintStart_toStartOf="@+id/textView18" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="-"
            android:layout_width="1dp"
            android:layout_height="13dp" android:id="@+id/txt_minus"
            app:layout_constraintStart_toEndOf="@+id/txt_goalCalories" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/textView18" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="70dp" android:textSize="30sp"/>
    <TextView
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_equalSign"
            app:layout_constraintStart_toEndOf="@+id/textView18" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/txt_goalCalories2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="70dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>